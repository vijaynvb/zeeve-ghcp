    {
      "name": "Auth",
      "description": "User registration and login flows.",
      "item": [
        {
          "name": "POST /v1/auth/register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"qa.user.{{$timestamp}}@example.com\",\n  \"password\": \"P@ssw0rd123\",\n  \"fullName\": \"QA User\",\n  \"timezone\": \"UTC\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "auth",
                "register"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('register returns 201', function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "const data = pm.response.json();",
                  "pm.collectionVariables.set('accessToken', data.accessToken || '');",
                  "pm.collectionVariables.set('refreshToken', data.refreshToken || '');",
                  "pm.collectionVariables.set('testUserEmail', data.user && data.user.email ? data.user.email : '');",
                  "pm.collectionVariables.set('userId', data.user && data.user.id ? data.user.id : '');",
                  "pm.test('access token issued', function () {",
                  "  pm.expect(data.accessToken).to.be.a('string').and.not.empty;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /v1/auth/login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{testUserEmail}}\",\n  \"password\": \"P@ssw0rd123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "auth",
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (!pm.collectionVariables.get('testUserEmail')) {",
                  "  throw new Error('Run the register request first to seed login credentials.');",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('login returns 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const data = pm.response.json();",
                  "pm.collectionVariables.set('accessToken', data.accessToken || '');",
                  "pm.collectionVariables.set('refreshToken', data.refreshToken || '');",
                  "pm.test('access token refreshed', function () {",
                  "  pm.expect(data.accessToken).to.be.a('string').and.not.empty;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
